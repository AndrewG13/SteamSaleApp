<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="mainPane" stylesheets="@CSS/global.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.slidedeck.Controller">
   <children>
      <Button fx:id="wishlistButton" layoutX="14.0" layoutY="90.0" mnemonicParsing="false" onAction="#getWishlist" text="getWishlist" />
      <TextField fx:id="userIDInput" layoutX="14.0" layoutY="42.0" promptText="Type in USER ID" />
      <Label id="userTime" fx:id="userTime" layoutX="14.0" layoutY="139.0" textFill="WHITE">
         <font>
            <Font name="Century" size="38.0" />
         </font>
      </Label>
      <Label id="gameDisplay" fx:id="gameDisplay" alignment="TOP_LEFT" layoutX="349.0" layoutY="229.0" prefHeight="135.0" prefWidth="195.0" text="GameDisplay" textFill="WHITE">
         <font>
            <Font name="Century" size="20.0" />
         </font>
      </Label>
      <Button fx:id="printGames" layoutX="14.0" layoutY="216.0" mnemonicParsing="false" onAction="#printWishlist" text="printWishlist" />
      <ImageView fx:id="imageDisplay" fitHeight="136.0" fitWidth="292.0" layoutX="277.0" layoutY="35.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="saveID" layoutX="178.0" layoutY="42.0" mnemonicParsing="false" onAction="#saveUserID" text="Save ID" />
      <Button fx:id="debugPrint" layoutX="14.0" layoutY="271.0" mnemonicParsing="false" onAction="#debugPrint" text="DebugPrint" />
   </children>
</AnchorPane>
